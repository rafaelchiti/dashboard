@import "./vendor/normalize.css"
@import "./vendor/weather-icons-custom.css"

html
  font-size 62.5%

body
  font-family 'lato', 'helvetica'
  box-sizing border-box
  // Changing to this value so the rems are easier to calculate
  // 1.4rem = 14px
  // 2.4rem = 24px
  // height 100%
  position relative
  font-size 1.4rem
  background url('../images/ny_background.png') no-repeat center center fixed
  background-size cover

*, *:before, *:after
  box-sizing inherit
