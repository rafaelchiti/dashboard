@import 'jeet'
@import 'nib'
@import '../../../assets/stylesheets/variables'
@import '../../../assets/stylesheets/colors'


.weatherWidget
  padding 0
  width 25rem

  .weatherWidget_mainSectionWrapper
    border-top-left-radius widgetRadius
    border-top-right-radius widgetRadius
    height 15rem
    background url('../../../assets/images/bue.jpg')
    background-size cover


  .weatherWidget_mainSection
    color widgetBackground
    border-top-left-radius widgetRadius
    border-top-right-radius widgetRadius
    padding 1rem
    height 100%
    width 100%
    background-color rgba(primaryBlack, .5)

    >._title
      text-transform uppercase

    >._todayInfo
      margin-top 3rem
      padding-left 1rem

      >._todayInfo_icon
        font-size 6rem

      >._todayInfo_temperature
        font-size 4rem
        margin-left 1rem

  .weatherWidget_bottomSection
    height 9rem
    padding 1.5rem
    cf()

    >._forecastColumn
      font-size 3rem
      column(1/3)

      >._icon
        text-align center

      >._forecastColumn_text
        font-size 2.5rem
        font-weight 100
        text-align center
        margin-top .3rem
